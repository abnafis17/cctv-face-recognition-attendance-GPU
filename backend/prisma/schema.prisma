generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  OPERATOR
}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  passwordHash String
  role         UserRole @default(ADMIN)
  isActive     Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  refreshTokens RefreshToken[]
}

model RefreshToken {
  id         String   @id @default(cuid())
  tokenHash  String   @unique
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  revokedAt  DateTime?
  expiresAt  DateTime
  createdAt  DateTime @default(now())

  // Optional metadata (good for security/auditing)
  ip         String?
  userAgent  String?
}

model Employee {
  id        String   @id @default(cuid())
  empId     String?  @unique @map("emp_id")
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  attendance Attendance[]
  templates  FaceTemplate[]

  @@index([empId])
}

model FaceTemplate {
  id         String   @id @default(cuid())
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  angle      String
  modelName  String
  embedding  Float[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([employeeId, angle])
  @@index([employeeId])
}

model Attendance {
  id         String   @id @default(cuid())
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  timestamp  DateTime
  cameraId   String?  // optional
  confidence Float?   // optional

  createdAt  DateTime @default(now())

  @@index([employeeId, timestamp])
}


model Camera {
  id        String   @id @default(cuid())
  camId     String?  @unique @map("cam_id")
  name      String
  rtspUrl   String
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([camId])
}
